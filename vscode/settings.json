    "vim.easymotion": true, // Search with "\\f"
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    //? *********** VIM Options *********/
    "vim.incsearch": true,
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "after": [
                "<Esc>"
            ],
            "before": [
                "t",
                "n"
            ],
            "commands": [
                "editor.action.formatDocument"
            ],
            "when": "editorLangId = sql && editorTextFocus"
        }
    ],
    //? *********** VIM Keymaps *********/
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        //? Clears highlight of current search
        {
            "before": [
                "<Esc>"
            ],
            "commands": [
                ":nohl"
            ],
            "silent": true,
            "when": [
                "editorFocus"
            ]
        },
        {
            "before": [
                "leader",
                "e"
            ],
            "commands": [
                "workbench.action.toggleSidebarVisibility"
            ]
        },
        {
            "before": [
                "leader",
                "l",
                "f"
            ],
            "commands": [
                "editor.action.formatDocument"
            ]
        },
        {
            "before": [
                "leader",
                "w"
            ],
            "commands": [
                ":w!"
            ]
        },
        {
            "before": [
                "leader",
                "q"
            ],
            "commands": [
                "workbench.action.closeActiveEditor"
            ]
        },
        {
            "before": [
                "leader",
                "v"
            ],
            "commands": [
                ":vsplit"
            ]
        },
        {
            "before": [
                "leader",
                "s"
            ],
            "commands": [
                ":split"
            ]
        },
        {
            "before": [
                "<leader>",
                "m"
            ],
            "commands": [
                "bookmarks.toggle"
            ]
        },
        {
            "before": [
                "<leader>",
                "b",
                "m"
            ],
            "commands": [
                "bookmarks.list"
            ]
        },
        {
            "before": [
                "leader",
                "f",
                "t"
            ],
            "commands": [
                "workbench.action.togglePanel"
            ]
        },
        {
            "before": [
                "leader",
                "g",
                "d"
            ],
            "commands": [
                "editor.action.revealDefinition"
            ],
            "when": [
                "editorFocus"
            ]
        },
        {
            "before": [
                "leader",
                "g",
                "h"
            ],
            "commands": [
                "editor.action.goToReferences"
            ],
            "when": [
                "editorFocus"
            ]
        },
        {
            "before": [
                "leader",
                "g",
                "i"
            ],
            "commands": [
                "editor.action.goToImplementation"
            ],
            "when": [
                "editorFocus"
            ]
        },
        //? HARPOON (vscode-harpoon) START
        //* [A]dd Harpoon
        {
            "before": [
                "leader",
                "a"
            ],
            "commands": [
                "vscode-harpoon.addEditor"
            ]
        },
        //* Open [H]arpoon file
        {
            "before": [
                "leader",
                "h"
            ],
            "commands": [
                "vscode-harpoon.editEditors"
            ]
        },
        //* Quick [P]ick Harpoon file
        {
            "before": [
                "leader",
                "p"
            ],
            "commands": [
                "vscode-harpoon.editorQuickPick"
            ]
        },
        //* Pick Harpoon file [1]
        {
            "before": [
                "leader",
                "1"
            ],
            "commands": [
                "vscode-harpoon.gotoEditor1"
            ]
        },
        //* Pick Harpoon file [2]
        {
            "before": [
                "leader",
                "2"
            ],
            "commands": [
                "vscode-harpoon.gotoEditor2"
            ]
        },
        //* Pick Harpoon file [3]
        {
            "before": [
                "leader",
                "3"
            ],
            "commands": [
                "vscode-harpoon.gotoEditor3"
            ]
        },
        //* Pick Harpoon file [4]
        {
            "before": [
                "leader",
                "4"
            ],
            "commands": [
                "vscode-harpoon.gotoEditor4"
            ]
        },
        //* Pick Harpoon file [5]
        {
            "before": [
                "leader",
                "5"
            ],
            "commands": [
                "vscode-harpoon.gotoEditor5"
            ]
        },
        //? HARPOON (vscode-harpoon) END
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        // Stay in visual mode while indenting
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
    ],
    "vim.searchHighlightColor": "#f6ff0080",
    "vim.searchHighlightTextColor": "#fff",
    "vim.smartRelativeLine": true,
    "vim.surround": true,
    "vim.useCtrlKeys": true,
    "vim.useSystemClipboard": true,
    //? Theme and Icons
    "workbench.colorTheme": "One Dark Pro Night Flat",
    "workbench.iconTheme": "material-icon-theme",
    //? Layout
    "editor.minimap.enabled": false
}
